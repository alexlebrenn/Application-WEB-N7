<!--Page Principal du blog => /posts !-->

<head>
 <%= stylesheet_link_tag "index" %>
</head>

<div class="bordure-top"></div>
<div class="bordure-left"></div>
<div class="bordure-right"></div>

<body>
	<%= yield %>

	<h1>
		Affichage de la liste des Posts
	</h1>


<ul>
	<div class="middle">
		<% @posts.each do |p| %>
			<hr><li>
				<%= link_to p.title, show_path(p.id)%> <br>
					<br><%= button_to "Modifier", receive_path(p.id), :method => :receive %>&nbsp &nbsp
					<%= button_to "Supprimer", delete_path(p.id), :id => p.id, :confirm => 'Etes-vous sÃ»r de vouloir supprimer le Post ?', :method => :delete %>
			</li><hr>
		<% end %>
	<br><%= button_to "Ajouter un nouveau post", new_path, :method => 'get' %>
	</div>
</ul>

</body>
